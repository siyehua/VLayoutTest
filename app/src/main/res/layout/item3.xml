<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:paddingTop="8.6dp"
        android:textColor="#888888"
        android:textSize="14.4sp"
        tools:text="煤炭" />

    <TextView
        android:id="@+id/tv_change_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5.28dp"
        android:includeFontPadding="false"
        android:textColor="#EC271C"
        android:textSize="11.52sp"
        tools:text="+1.24%" />

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_change_percent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6.72dp"
        android:includeFontPadding="false"
        android:textColor="#999999"
        android:textSize="10.56sp"
        tools:text="陕西黑猫" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6.72dp"
        android:includeFontPadding="false"
        android:paddingBottom="8.6dp"
        android:textColor="#666666"
        android:textSize="9.6sp"
        tools:text="9.66 +4.21%" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/tv_info"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_title1"
        android:layout_marginBottom="7.68dp"
        android:layout_marginTop="7.68dp"
        android:background="#DADADA" />
</RelativeLayout>